CREATE TABLE producto (
    id_producto INT PRIMARY KEY AUTO_INCREMENT,
    nombre_prod VARCHAR (100),
    categoria VARCHAR (10),
    rubro_prod VARCHAR (50),
    color VARCHAR (255),
    descripción_prod VARCHAR (100),
    precio DOUBLE,
    stock_prod INT
);

